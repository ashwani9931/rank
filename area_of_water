#include <iostream>
#include <vector>
using namespace std;
int area(vector<int> &height)
{
    int left = 0;
    int right = height.size() - 1;
    int max_area = 0;
    while (left < right)
    {
        int current = min(height[left], height[right]) * (right - left);
        max_area = max(current, max_area);
        if (height[left] < height[right])
        {
            left++;
        }
        else
        {
            right--;
        }
    }
    return max_area;
}
int main()
{
    int n, i;
    cout << "enter size of array: ";
    cin >> n;
    vector<int> a(n);
    for (i = 0; i < n; i++)
    {
        cin >> a[i];
    }
    cout << "max: " << area(a);
    return 0;
}
